      font-size: 14px;
    }

    section i {
      font-size: smaller;
      color: dimgrey;
    }

    section img {
      width: 100%;
    }

    section .container {
      margin-bottom: 63px;
    }

    @media only screen and (max-width: 991px) {
      section #div01 {
        margin-bottom: 17px;
      }
    }

    @media only screen and (min-height: 1060px) {
      footer {
        position: fixed;
      }
    }



    footer img {
      width: 72px;
      float: left;
    }

    footer .lead {
      font-size: 15px;
    }

    footer .container {
      margin-top: 8px;
    }

    footer p {
      font-family: "open Sans", sans-serif;
      font-size: 14px;
      color: rgb(92, 92, 92);
      margin-bottom: 1px;
    }

    footer h5 {
      font-family: "Noto Sans TC", sans-serif;
      font-size: 18px;
    }

    footer ul {
      list-style: none;
      padding: 0;
      float: left;
      margin-right: 70px;
    }

    footer ul li {
      margin-bottom: 7px;
    }

    footer ul li a {
      color: rgb(92, 92, 92);
    }

    @media only screen and (max-width: 1200px) {
      footer .lead {
        margin-left: 72px;
      }
    }

    @media only screen and (max-width: 767px) {
      #links {
        margin-top: 20px;
      }
    }

    @media only screen and (max-width: 574px) {
      #links {
        margin-top: 1px;
      }
